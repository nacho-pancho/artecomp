
<project>

    <path id="classpath">
        <fileset dir="lib" includes="**/*.jar"/>
    </path>

        <target name="clean">
        <delete dir="classes"/>
    </target>

    <target name="compile">
        <mkdir dir="classes"/>
        <javac srcdir="source" destdir="classes"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="jar"/>
        <jar destfile="jar/ArteComp.jar" basedir="classes">
            <manifest>
                <attribute name="Main-Class" value="artecomp.ui.ArteComp"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar">
        <java jar="jar/ArteComp.jar" classname="artecomp.ui.ArteComp" fork="true">
                <path refid="classpath"/>
                <path location="jar/ArteComp.jar"/>
            </classpath>    
        </java>
    </target>

    <target name="main" depends="clean,jar"/>
</project>